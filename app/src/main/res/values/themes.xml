<resources>
    <!-- Base application theme. -->
    <style name="Theme.CHMovie" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fill_primary</item>
        <item name="colorPrimaryVariant">@color/fill_secondary</item>
        <item name="colorOnPrimary">@color/fill_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fill_primary</item>
        <item name="colorSecondaryVariant">@color/fill_secondary</item>
        <item name="colorOnSecondary">@color/fill_primary</item>
        <item name="colorControlNormal">@color/tint_primary</item>
        <item name="android:textColorSecondary">@color/tint_tertiary</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/shadow_primary</item>
            <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.CHMovie.NoActionBar</item>
    </style>
    <style name="NavigationView">
        <item name="android:textColorSecondary">@color/tint_tertiary</item>
    </style>

    <style name="Theme.CHMovie.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Theme.CHMovie.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CHMovie.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Text_Heading">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/tint_primary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text_Heading2">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/tint_primary</item>
    </style>

    <style name="Text_Heading3">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/tint_secondary</item>
    </style>

    <style name="Text_Body">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/tint_primary</item>
    </style>

    <style name="Text_Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/tint_secondary</item>
    </style>
    <!-- RecyclerView Styles -->
    <style name="App_RecyclerView_Horizontal">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="App_RecyclerView_Vertical">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>


    <style name="InputStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:textColorHint">@color/tint_secondary</item>
        <item name="android:textColor">@color/tint_primary</item>
    </style>
</resources>