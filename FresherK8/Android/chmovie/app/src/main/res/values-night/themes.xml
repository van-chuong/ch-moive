<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CHMovie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fill_primary</item>
        <item name="colorPrimaryVariant">@color/fill_secondary</item>
        <item name="colorOnPrimary">@color/fill_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fill_primary</item>
        <item name="colorSecondaryVariant">@color/fill_secondary</item>
        <item name="colorOnSecondary">@color/fill_primary</item>
    </style>

    <style name="Theme.CHMovie.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CHMovie.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CHMovie.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Text_Heading">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/tint_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text_Heading2">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/tint_primary</item>
    </style>

    <style name="Text_Heading3">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/tint_secondary</item>
    </style>
    <style name="Text_Body">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/tint_primary</item>
    </style>
    <style name="Text_Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/tint_secondary</item>
    </style>
</resources>